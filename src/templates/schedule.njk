---
layout: 'base.njk'
---

<div>
    <h1 class="title ">{{ title }}</h1>
    <p>{{ description | safe }}</p>
</div>

  {{ content | safe }}

<div class="schedule">
  {%- for day in collections.schedule -%}
  <div class="schedule__day" id="{{ day.data.title | lower }}">
    <h2 class="schedule__head" {{ 'aria-current=page' if (day.data.title | lower) === site.weekday }}>
      <span>{{ day.data.title }}</span>
    </h2>
    <div class="schedule__body">
      {%- if day.data.events -%}       
      <dl>
        {%- for event in day.data.events -%}
          <div>
          <dt>{{ event.timeslot }}</dt>
          {%- for group in event.groups -%}
            <dd>
              <b>{{ group.name }}</b> <span>p√• bane {{ group.court }}</span>
              {%- if group.info -%}
              <p><small>{{ group.info | markdownInline | safe }}</small></p>
              {%- endif -%}
            </dd>
          {%- endfor -%} 
        </div>
        {%- endfor -%}
      </dl>
      {%- endif -%}
      {%- if day.data.info -%}
      <p>{{ day.data.info | markdownInline | safe }}</p>
      {%- endif -%}
    </div>
  </div>
  {%- endfor -%}
</div> 

<script type="text/javascript">
  const weekday = new Intl.DateTimeFormat("no-NB", { weekday: "long" }).format(new Date())
  document.querySelector('#' + weekday).scrollIntoView({ behavior: 'auto', block: 'nearest', inline: 'start' });
</script>